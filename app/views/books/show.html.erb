<div class="row">
  <%= render 'users/side_bar', book: @book_new, user: @user %>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
    	<tbody>
    	  <tr>
          <td>
            <%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:"40x40" %><% end %><br>
            <%= link_to @user.name, user_path(@user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete,"data-confirm"=>"本当に消しますか？" %></td>
          <% end %>
         </tr>
       </tbody>
    </table>
  </div>
</div>
